[gatk_callcopyratiosegments__dna_focal]
    module       = GATK
    submodule    = CallCopyRatioSegments
    docker_image = gatk4
    input_from   = gatk_modelsegments__dna_focal
    final_output = seg_call
        [[args]]
            gatk_version    = 4

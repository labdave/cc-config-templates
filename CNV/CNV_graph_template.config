            ref_dict        = ref_dict
            ref_idx         = ref_idx

[gatk_plotmodeledsegments__dna_global]
    module       = GATK
    submodule    = PlotModeledSegments
    docker_image = gatk4
    input_from   = gatk_denoisereadcounts__dna, gatk_modelsegments__dna_global
